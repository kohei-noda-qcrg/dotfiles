[init]
        defaultBranch = main
[core]
        editor = nvim
[alias]
        a = add
        br = branch
        ch = checkout
        co = commit
        st = status
        unstage = reset HEAD --
[rebase]
        autostash = true
[user]
        name = @USERNAME@
        email = @USEREMAIL@
[credential "https://gist.github.com"]
        helper = !gh auth git-credential
[credential "https://github.com"]
        helper = !gh auth git-credential
[credential "https://gitlab.com"]
        helper = !glab auth git-credential
[push]
        autoSetupRemote = true
[pull]
        rebase = true
