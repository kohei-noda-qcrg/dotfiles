    "fortran.linter.compiler": "gfortran",
    "fortran.formatting.path": "/home/noda/.pyenv/shims",
    "fortran.linter.compilerPath": "/usr/bin/gfortran",
    "fortran.fortls.path": "/home/noda/.pyenv/shims/fortls",
